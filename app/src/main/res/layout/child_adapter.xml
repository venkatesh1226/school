<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        android:elevation="5dp">
    <ImageView
        android:id="@+id/image_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1"

        android:background="@drawable/ic_login"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_childname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/average"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/image_card"
        android:layout_toLeftOf="@+id/relativeLayout"
        android:text="Name"
        android:textStyle="italic|bold"
        />

    <TextView
        android:id="@+id/txt_childage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/relativeLayout"
        android:fontFamily="@font/average"
        android:layout_below="@+id/txt_childname"
        android:layout_toRightOf="@+id/image_card"
         />

    <TextView
        android:id="@+id/txt_childgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@+id/txt_childage"
        android:layout_toLeftOf="@+id/relativeLayout"
        android:fontFamily="@font/average"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/image_card"

        />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_pencil_foreground"
            android:elevation="10dp"
            android:layout_margin="05dp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:layout_below="@+id/btn_edit"
            android:background="@drawable/ic_delete_foreground"
            android:layout_margin="05dp"
            />
    </RelativeLayout>



</RelativeLayout>
    </androidx.cardview.widget.CardView>
